# Runtime
ENVIRONMENT=local
LOG_LEVEL=INFO

# Streamlit â†’ FastAPI URL
# Inside Docker this is overridden to http://api:8003 automatically via docker-compose.yml.
# Only set this manually if running Streamlit against a remote FastAPI instance.
FASTAPI_URL=http://localhost:8003

# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here

# Database
DATABASE_URL=postgresql+asyncpg://googly:googly@localhost:5432/googly

# Redis
REDIS_URL=redis://localhost:6379/0

# Auth (Clerk) - get from your Clerk dashboard
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key
CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
CLERK_JWKS_URL=https://your-clerk-domain.clerk.accounts.dev/.well-known/jwks.json

# Internal security (APIM -> FastAPI)
APIM_INTERNAL_TOKEN=your-internal-token-here

# Search
Exa_API_KEY=tvly_your-exa-key

# News (optional)
NEWSAPI_KEY=
GNEWS_API_KEY=

# Research (optional)
SEMANTIC_SCHOLAR_API_KEY=

# Social (optional)
INSTAGRAM_ACCESS_TOKEN=
TIKTOK_CLIENT_KEY=
X_BEARER_TOKEN=

# Azure (production only)
AZURE_KEY_VAULT_URL=https://googly-kv.vault.azure.net/
AZURE_STORAGE_ACCOUNT_URL=https://googlystorage.blob.core.windows.net/

# KB tuning
EMBEDDING_BATCH_SIZE=100
KB_SCORE_THRESHOLD=0.70

# Agno
AGNO_TELEMETRY=false
